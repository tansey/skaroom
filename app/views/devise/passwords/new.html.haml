= content_for :title, "Forgot Your Password?"

%h2 Forgot your password?

= form_for resource, as: resource_name, url: password_path( resource_name ), html: { role: 'form', class: 'form-horizontal' } do |f|
  - unless resource.errors.empty?
    .alert.alert-danger= devise_error_messages!

  .form-group
    = f.label :email, class: 'col-lg-2 control-label'
    .col-lg-4= f.text_field :email, autofocus: true, class: 'form-control'

  .form-group
    .col-lg-offset-2.col-lg-4= f.submit "Send me reset password instructions", class: 'btn btn-primary'