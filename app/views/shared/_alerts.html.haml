- if flash[ :alert    ]
  .alert.alert-danger=    flash[ :alert   ]
- if flash[ :error    ]
  .alert.alert-danger=    flash[ :error   ]
- if flash[ :success  ]
  .alert.alert-success=   flash[ :success ]
- if flash[ :info     ]
  .alert.alert-info=      flash[ :info    ]
- if flash[ :notice   ]
  .alert.alert-info=      flash[ :notice  ]